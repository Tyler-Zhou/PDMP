<UserControl
    x:Class="PDMP.Library.Client.Views.RadioTopicView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="clr-namespace:PDMP.Client.Core;assembly=PDMP.Client.Core"
    xmlns:local="clr-namespace:PDMP.Library.Client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="290" />
        </Grid.ColumnDefinitions>
        <DataGrid
            Grid.Column="0"
            Margin="5"
            HorizontalContentAlignment="Center"
            ext:HeaderHelper.FontWeight="Bold"
            ext:HeaderHelper.HorizontalAlignment="Center"
            ext:HeaderHelper.Padding="8"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            GridLinesVisibility="None"
            ItemsSource="{Binding RadioTopics}"
            ScrollViewer.VerticalScrollBarVisibility="Visible"
            SelectionUnit="Cell">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Id}"
                    Header="序号"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Stem}"
                    Header="题干"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding Answer}"
                    Header="答案"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ItemA}"
                    Header="选项A"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ItemB}"
                    Header="选项B"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ItemC}"
                    Header="选项C"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ItemD}"
                    Header="选项D"
                    IsReadOnly="True" />
                <DataGridTemplateColumn Width="80" Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Height="Auto" Padding="5">
                                    <ext:Icon Type="PencilLine" />
                                </Button>
                                <Button
                                    Height="Auto"
                                    Margin="2,0,0,0"
                                    Padding="5"
                                    Command="{Binding DataContext.Delete, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource AccentButton}">
                                    <ext:Icon Type="DeleteBinLine" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DockPanel Grid.Column="1" LastChildFill="False">
            <TextBlock
                Padding="20,10"
                DockPanel.Dock="Top"
                FontWeight="Bold"
                Foreground="Black"
                Text="题干" />
            <TextBox
                Margin="20,5"
                ext:InputBoxHelper.Watermark="请输入题干"
                DockPanel.Dock="Top"
                Text="{Binding CurrentRadio.Stem}" />
            <TextBlock
                Padding="20,5"
                DockPanel.Dock="Top"
                FontWeight="Bold"
                Foreground="Black"
                Text="选项" />
            <TextBox
                Margin="20,5"
                ext:InputBoxHelper.Watermark="请输入选项A"
                DockPanel.Dock="Top"
                Text="{Binding CurrentRadio.ItemA}" />
            <TextBox
                Margin="20,5"
                ext:InputBoxHelper.Watermark="请输入选项B"
                DockPanel.Dock="Top"
                Text="{Binding CurrentRadio.ItemB}" />
            <TextBox
                Margin="20,5"
                ext:InputBoxHelper.Watermark="请输入选项C"
                DockPanel.Dock="Top"
                Text="{Binding CurrentRadio.ItemC}" />
            <TextBox
                Margin="20,5"
                ext:InputBoxHelper.Watermark="请输入选项D"
                DockPanel.Dock="Top"
                Text="{Binding CurrentRadio.ItemD}" />
            <TextBlock
                Padding="20,5"
                DockPanel.Dock="Top"
                FontWeight="Bold"
                Foreground="Black"
                Text="答案" />
            <StackPanel
                Height="25"
                Margin="20,5"
                DockPanel.Dock="Top"
                Orientation="Horizontal">
                <RadioButton
                    Name="radioItemA"
                    Margin="10,0"
                    GroupName="RadioAnswer"
                    IsChecked="True">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="Black" Text="A" />
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>
                <RadioButton
                    Name="radioItemB"
                    Margin="10,0"
                    GroupName="RadioAnswer">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="Black" Text="B" />
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>
                <RadioButton
                    Name="radioItemC"
                    Margin="10,0"
                    GroupName="RadioAnswer">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="Black" Text="C" />
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>
                <RadioButton
                    Name="radioItemD"
                    Margin="10,0"
                    GroupName="RadioAnswer">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="Black" Text="D" />
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>
            </StackPanel>
            <Button
                Margin="20,0"
                Command="{Binding ExecuteCommand}"
                CommandParameter="保存"
                Content="保存"
                DockPanel.Dock="Top" />
        </DockPanel>
    </Grid>
</UserControl>
